// Prisma schema for Global Security Hub
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Organization {
  id            String      @id @default(cuid())
  name          String      @unique
  fullName      String?
  country       String
  type          String      // POLICE, INTELLIGENCE, DEFENCE, EMBASSY, CYBER_SECURITY, etc.
  logoUrl       String?
  description   String?
  website       String?
  email         String?
  phone         String?
  address       String?
  established   String?
  lastUpdated   DateTime    @default(now()) @updatedAt
  isActive      Boolean     @default(true)
  personnel     Personnel[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Personnel {
  id              String        @id @default(cuid())
  organizationId  String
  organization    Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name            String
  position        String
  rank            String?
  photoUrl        String?
  bio             String?
  email           String?
  phone           String?
  startDate       String?
  endDate         String?
  isCurrent       Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([organizationId])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  role          String    @default("EDITOR")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
